</head>

<body>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
            <a class="navbar-brand" href="#">Navbar</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active" aria-current="page" href="#">Home</a>
                    </li>

                    </li>
                    <li class="nav-item">
                        <a class="nav-link disabled">Disabled</a>
                    </li>
                </ul>
                <form class="d-flex" role="search">
                    <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-success" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
    {{!-- Corregir los name, las id segun sea el caso, ya que solo pegue y copie los label --}}
    <div class="container mt-4">
        <div class="card border-secondary">
            <div class="card-header"> Nuevo Registro</div>
            <div class="card-body">
                <form action="/save" method="post">
                    <div class="mb-3">
                        <label for="user" class="form-label">Rut</label>
                        <input type="number" class="form-control" id="user" name="user" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="nombre" class="form-label">Nombre</label>
                        <input type="text" class="form-control" id="nombre" name="nombre" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="apellido" class="form-label">apellido</label>
                        <input type="text" class="form-control" id="apellido" name="apellido" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Cargo</label>
                        <select id="rol" name="rol" id="" class="form-select" placeholder="Seleccionar opción">
                            <option value="recepcion" selected>Recepción</option>
                            <option value="admin" selected>Admin</option>
                            <option value="terapeuta" selected>Terapeuta</option>
                            {{!-- <option value="seleccionar" selected>Seleccionar</option> --}}
                        </select>
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Fecha Ingreso</label>
                        <input type="date" class="form-control" id="dateInicio" name="dateInicio" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Fecha Nacimiento</label>
                        <input type="date" class="form-control" id="dateNaci" name="dateNaci" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Especialidad</label>
                        <input type="text" class="form-control" id="especialidad" name="especialidad" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Banco</label>
                        <input type="text" class="form-control" id="banco" name="banco" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Cuenta</label>
                        <input type="number" class="form-control" id="cuenta" name="cuenta" tabindex="1">
                    </div>
                    <div class="mb-3">
                        <label for="user" class="form-label">Correo</label>
                        <input type="email" class="form-control" id="correo" name="correo" tabindex="1">
                    </div>
                    <button type="submit" class="btn btn-primary" tabindex="5">Guardar</button>
                    <a href="/mantenedor" class="btn btn-secondary">Cancelar</a>
                </form>
            </div>

        </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe"
        crossorigin="anonymous"></script>
