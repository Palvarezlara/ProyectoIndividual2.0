<div class="card border-secondary">
  <div class="card-header"> Nuevo Registro</div>
  <div class="card-body">
    <form action="/update" method="put" id="formFormUsuario">
      <div class="mb-3">
        <label for="rut" class="form-label">Rut</label>
        <input
          type="text"
          class="form-control"
          id="rut"
          name="rut"
          oninput="validarRut()"
          tabindex="1"
          required
        />
        <div id="mensaje"></div>
      </div>
      <div class="mb-3">
        <label for="nombre" class="form-label">Nombre</label>
        <input
          type="text"
          class="form-control"
          id="nombre"
          name="nombre"
          tabindex="1"
          required
        />
      </div>
      <div class="mb-3">
        <label for="apellido" class="form-label">Apellido</label>
        <input
          type="text"
          class="form-control"
          id="apellido"
          name="apellido"
          tabindex="1"
          required
        />
      </div>
      <div class="mb-3">
        <label for="rol" class="form-label">Cargo</label>
        <select
          id="rol"
          name="rol"
          id=""
          class="form-select"
          placeholder="Seleccionar opción"
          required
        >
          <option value="recepcion" selected>Recepción</option>
          <option value="admin" selected>Admin</option>
          <option value="terapeuta" selected>Terapeuta</option>
          {{! <option value="seleccionar" selected>Seleccionar</option> }}
        </select>
      </div>
      <div class="mb-3">
        <label for="dateInicio" class="form-label">Fecha Ingreso</label>
        <input
          type="date"
          class="form-control"
          id="dateInicio"
          name="dateInicio"
          tabindex="1"
          required
        />
      </div>
      <div class="mb-3">
        <label for="dateNaci" class="form-label">Fecha Nacimiento</label>
        <input
          type="date"
          class="form-control"
          id="dateNaci"
          name="dateNaci"
          tabindex="1"
          required
        />
      </div>
      <div class="mb-3">
        <label for="especialidad" class="form-label">Especialidad</label>
        <input
          type="text"
          class="form-control"
          id="especialidad"
          name="especialidad"
          tabindex="1"
          required
        />
      </div>
      <div class="mb-3">
        <label for="banco" class="form-label">Banco</label>
        <input
          type="text"
          class="form-control"
          id="banco"
          name="banco"
          tabindex="1"
          required
        />
      </div>
      <div class="mb-3">
        <label for="cuenta" class="form-label">Cuenta</label>
        <input
          type="number"
          class="form-control"
          id="cuenta"
          name="cuenta"
          tabindex="1"
          required
        />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Correo electrónico</label>
        <input
          type="email"
          class="form-control"
          id="email"
          name="email"
          tabindex="1"
          oninput="validarEmail()"
          required
        />
        <div id="mensajeEmail"></div>
      </div>
      <button
        type="submit"
        class="btn btn-primary"
        tabindex="5"
      >Guardar</button>
      <a href="/mantenedor" class="btn btn-secondary">Cancelar</a>
    </form>
  </div>
</div>